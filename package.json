{
  "name": "event-storm",
  "version": "0.1.1",
  "description": "In memory event store",
  "main": "./index.js",
  "license": "MIT",
  "author": "artur93gev",
  "scripts": {
    "bundle": "rollup -c",
    "lint": "eslint src/*.js",
    "build": "rimraf ./dist && yarn run bundle",
    "publish-lib": "yarn run build && cd dist && yarn publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-uglify-es": "^0.0.1"
  },
  "keywords": [
    "event-store",
    "store-management"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/event-store/event-store.git"
  },
  "homepage": "https://github.com/event-store/event-store#readme",
  "bugs": {
    "url": "https://github.com/event-store/event-store/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}